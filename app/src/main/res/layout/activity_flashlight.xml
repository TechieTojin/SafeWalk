<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Flashlight"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_flashlight"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Flashlight"
        android:textSize="24sp"
        app:cornerRadius="100dp"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconSize="48dp"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sos_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS Pattern"
        android:layout_marginTop="32dp"
        app:icon="@android:drawable/ic_menu_help"
        app:layout_constraintTop_toBottomOf="@id/button_flashlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the flashlight button to toggle\nHold for SOS pattern"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:alpha="0.7"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_sos_pattern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 